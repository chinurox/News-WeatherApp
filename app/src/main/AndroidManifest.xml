<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.pradumn.newsweather_1">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".applications.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="NewsAndWeather"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MainActivity"
            android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.NewsActivity"
            android:launchMode="singleInstance" />
        <activity
            android:name=".activities.BookmarksActivity"
            android:launchMode="singleInstance" />
        <activity
            android:name=".activities.WeatherActivity"
            android:launchMode="singleInstance" />
        <activity
            android:name=".activities.ScienceAndTechnologyActivity"
            android:launchMode="singleInstance" />
        <activity
            android:name=".activities.WorldAndNationActivity"
            android:launchMode="singleInstance" />
        <activity
            android:name=".activities.EntertainmentAndEventsActivity"
            android:launchMode="singleInstance" />
        <activity
            android:name=".activities.DefaultSettingsActivity"
            android:label="@string/title_activity_default_settings"
            android:parentActivityName=".activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MainActivity" />
        </activity>
        <activity android:name=".activities.MySettingsActivity"
            android:launchMode="singleInstance"/>
    </application>

</manifest>